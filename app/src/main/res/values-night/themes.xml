<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyClock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#284FD8</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#284FD8</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="np_selectedTextColor">@color/white</item>
        <item name="np_textColor">#858585</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="M">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DayNightTextView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/bottom_shadow</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DayNightTextView2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DayNightSwitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="switchBkgCheckedColor">@color/colorSecondary</item>
        <item name="switchBkgNotCheckedColor">@color/colorGray</item>
        <item name="switchToggleCheckedColor">@color/white</item>
        <item name="switchToggleNotCheckedColor">@color/white</item>
    </style>

    <style name="DayNightRadialProgressbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="outerEmptyProgressColor">@color/stopwatchBtnColor</item>
    </style>

    <style name="DayNightSwipeLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/blacked</item>
    </style>

</resources>